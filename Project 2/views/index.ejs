    <style>
        :root {
            --bg: #0b1220;
            --card: #0f1720;
            --muted: #9aa6b2;
            --accent1: #00d4ff;
            --accent2: #6a5cff;
            --glass: rgba(255, 255, 255, 0.03);
            --radius: 14px;
            --glass-2: rgba(255, 255, 255, 0.02);
            --success: #22c55e;
            --danger: #ff6b6b;
            --warning: #ffb86b;
            font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        }

        /* Global */
        * {
            box-sizing: border-box
        }

        html,
        body {
            height: 100%;
            margin: 0;
            background: linear-gradient(180deg, var(--bg) 0%, #06111a 100%);
            color: #e6f0f6
        }

        a {
            color: inherit
        }

        .container {
            max-width: 1100px;
            margin: 32px auto;
            padding: 20px
        }

        /* Header */
        header.topbar {
            display: flex;
            align-items: center;
            gap: 16px;
            justify-content: space-between;
            margin-bottom: 18px
        }

        .brand {
            display: flex;
            align-items: center;
            gap: 12px
        }

        .logo {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--accent2), var(--accent1));
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.6)
        }

        .brand h1 {
            font-size: 18px;
            margin: 0
        }

        .brand p {
            margin: 0;
            color: var(--muted);
            font-size: 13px
        }

        .top-actions {
            display: flex;
            gap: 8px;
            align-items: center
        }

        .search {
            background: var(--glass);
            border-radius: 12px;
            padding: 8px 12px;
            display: flex;
            align-items: center;
            gap: 8px
        }

        .search input {
            background: transparent;
            border: none;
            outline: none;
            color: inherit;
            width: 220px
        }

        .add-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 14px;
            border-radius: 12px;
            background: linear-gradient(90deg, var(--accent1), var(--accent2));
            border: none;
            color: #04202a;
            font-weight: 700;
            cursor: pointer
        }

        /* Layout */
        .grid {
            display: grid;
            grid-template-columns: 360px 1fr;
            gap: 22px
        }

        /* Form Card */
        .card {
            background: linear-gradient(180deg, var(--card), #0b1218);
            border-radius: var(--radius);
            padding: 18px;
            box-shadow: 0 8px 30px rgba(8, 12, 18, 0.6);
            border: 1px solid var(--glass-2)
        }

        .card h2 {
            margin: 0 0 10px 0
        }

        label {
            display: block;
            font-size: 13px;
            color: var(--muted);
            margin-top: 10px
        }

        input[type=text],
        input[type=date],
        select,
        textarea {
            width: 100%;
            padding: 10px 12px;
            margin-top: 6px;
            border-radius: 10px;
            border: none;
            background: rgba(255, 255, 255, 0.03);
            color: inherit;
            font-size: 14px
        }

        textarea {
            min-height: 90px;
            resize: vertical
        }

        .form-row {
            display: flex;
            gap: 10px
        }

        .form-row>* {
            flex: 1
        }

        .row-actions {
            display: flex;
            gap: 8px;
            margin-top: 14px
        }

        .btn {
            padding: 10px 12px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            font-weight: 700
        }

        .btn.primary {
            background: linear-gradient(90deg, var(--accent1), var(--accent2));
            color: #02121b
        }

        .btn.ghost {
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.04);
            color: var(--muted)
        }

        /* Stats */
        .stats {
            display: flex;
            gap: 10px;
            margin: 8px 0 16px
        }

        .stat {
            flex: 1;
            padding: 12px;
            border-radius: 12px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.01), transparent);
            border: 1px solid rgba(255, 255, 255, 0.02);
            display: flex;
            flex-direction: column
        }

        .stat .num {
            font-size: 18px;
            font-weight: 800
        }

        .stat .lbl {
            font-size: 12px;
            color: var(--muted);
            margin-top: 6px
        }

        /* Table area */
        .table-wrap {
            overflow: hidden;
            border-radius: 12px
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: transparent
        }

        thead th {
            font-size: 12px;
            padding: 12px 14px;
            text-align: left;
            color: var(--muted);
            letter-spacing: 0.6px
        }

        tbody tr {
            border-top: 1px solid rgba(255, 255, 255, 0.02)
        }

        tbody td {
            padding: 12px 14px;
            vertical-align: middle
        }

        .priority {
            display: inline-block;
            padding: 6px 10px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 12px
        }

        .priority.high {
            background: linear-gradient(90deg, #ff6b6b, #ff4d4d)
        }

        .priority.medium {
            background: linear-gradient(90deg, #ffb86b, #ffa500)
        }

        .priority.low {
            background: linear-gradient(90deg, #6ee7b7, #22c55e)
        }

        .actions {
            display: flex;
            gap: 6px
        }

        .icon-btn {
            background: transparent;
            border: 1px solid rgba(195, 21, 21, 0.03);
            padding: 8px;
            border-radius: 8px;
            cursor: pointer
        }

        /* Empty state */
        .empty {
            text-align: center;
            padding: 40px;
            color: var(--muted)
        }

        /* Responsive */
        @media (max-width:920px) {
            .grid {
                grid-template-columns: 1fr;
            }

            .search input {
                width: 120px
            }
        }
    </style>
</head>

