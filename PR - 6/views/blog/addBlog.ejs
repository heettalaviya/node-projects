<%- include('../header') %>

<style>
:root {
    --primary: #7c5cff;
    --bg: #f6f7fb;
    --card: #ffffff;
    --muted: #6b7280;
    --text: #111827;
    --border: #e5e7eb;
}

/* Base */
.page-wrapper {
    background: var(--bg);
    min-height: 100vh;
    padding: 50px 0;
    font-family: 'Inter', system-ui, sans-serif;
}

/* Layout */
.editor-shell {
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 30px;
}

/* Main Editor */
.editor-main {
    background: var(--card);
    border-radius: 24px;
    padding: 40px;
    box-shadow: 0 25px 60px rgba(0,0,0,.08);
}

/* Title */
.editor-title {
    border: none;
    font-size: 40px;
    font-weight: 800;
    width: 100%;
    outline: none;
    color: var(--text);
}

.editor-title::placeholder {
    color: #c7c9d1;
}

/* Textarea */
.editor-textarea {
    border: none;
    width: 100%;
    resize: none;
    outline: none;
    font-size: 16px;
    margin-top: 20px;
    min-height: 140px;
}

/* Divider */
.divider {
    height: 1px;
    background: var(--border);
    margin: 30px 0;
}

/* Category */
.segmented {
    display: inline-flex;
    background: #f1f2f7;
    border-radius: 50px;
    padding: 6px;
    gap: 6px;
}

.segmented input {
    display: none;
}

.segmented label {
    padding: 10px 22px;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    color: var(--muted);
}

.segmented input:checked + label {
    background: var(--primary);
    color: #fff;
}

/* Upload */
.upload-card {
    border-radius: 18px;
    background: linear-gradient(135deg, #fafaff, #f1f2ff);
    padding: 40px;
    text-align: center;
    position: relative;
    margin-top: 20px;
}

.upload-card input {
    position: absolute;
    inset: 0;
    opacity: 0;
    cursor: pointer;
}

/* Sidebar */
.editor-side {
    position: sticky;
    top: 40px;
}

.side-card {
    background: var(--card);
    border-radius: 24px;
    padding: 30px;
    box-shadow: 0 20px 50px rgba(0,0,0,.08);
}

/* Inputs */
.side-card input {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: 1px solid var(--border);
}

/* Publish */
.publish-btn {
    margin-top: 30px;
    width: 100%;
    padding: 16px;
    font-size: 16px;
    font-weight: 700;
    border-radius: 14px;
    border: none;
    background: linear-gradient(135deg, #7c5cff, #5b3fff);
    color: #fff;
    box-shadow: 0 15px 30px rgba(124,92,255,.45);
}
</style>

<div class="page-wrapper">
<form action="/blog/add-blog" method="post" enctype="multipart/form-data">

<div class="editor-shell">

    <!-- MAIN -->
    <div class="editor-main">

        <input 
            type="text" 
            name="title" 
            class="editor-title"
            placeholder="Blog title goes here..."
            required
        >

        <textarea 
            name="description" 
            class="editor-textarea"
            placeholder="Start writing a short description..."
        ></textarea>

        <div class="divider"></div>

        <div>
            <strong>Category</strong><br><br>
            <div class="segmented">
                <input type="radio" id="c1" name="category" value="Technology" checked>
                <label for="c1">Technology</label>

                <input type="radio" id="c2" name="category" value="Education">
                <label for="c2">Education</label>

                <input type="radio" id="c3" name="category" value="Career">
                <label for="c3">Career</label>
            </div>
        </div>

        <div class="upload-card">
            <input type="file" name="blogimage">
            <h4>Upload cover image</h4>
            <p class="text-muted">PNG / JPG Â· 1200Ã—630 recommended</p>
        </div>

    </div>

    <!-- SIDEBAR -->
    <div class="editor-side">
        <div class="side-card">

            <h4>Publish Settings</h4><br>

            <label>Author Name</label>
            <input type="text" name="authorname" placeholder="Author name"><br><br>

            <label>Publish Date</label>
            <input type="date" name="publishDate"><br><br>

            <label>Author Photo</label>
            <input type="file" name="authorImage"><br>

            <button class="publish-btn">
                ðŸš€ Publish Blog
            </button>

        </div>
    </div>

</div>
</form>
</div>

