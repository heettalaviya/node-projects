<%- include('../header') %>

<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --brand-primary: #6366f1;
        --brand-success: #10b981;
        --brand-danger: #ef4444;
        --bg-subtle: #f8fafc;
        --text-dark: #1e293b;
    }

    body {
        background-color: var(--bg-subtle);
        font-family: 'Outfit', sans-serif;
    }

    .page-wrapper {
        padding-top: 30px;
    }

    /* Modern Search Bar */
    .search-container {
        max-width: 600px;
        margin: 0 auto 50px auto;
        position: relative;
    }

    .search-input {
        height: 55px;
        border-radius: 100px;
        padding-left: 30px;
        border: 2px solid #e2e8f0;
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.05);
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        border-color: var(--brand-primary);
        box-shadow: 0 10px 20px -5px rgba(99, 102, 241, 0.2);
    }

    /* Blog Card UI */
    .blog-card {
        background: white;
        border-radius: 24px;
        border: none;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        position: relative;
    }

    .blog-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 30px 50px -12px rgba(0, 0, 0, 0.1);
    }

    .img-wrapper {
        position: relative;
        height: 240px;
        overflow: hidden;
    }

    .blog-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .blog-card:hover .blog-img {
        transform: scale(1.1);
    }

    .category-tag {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(5px);
        color: var(--brand-primary);
        padding: 5px 15px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Content Styling */
    .card-body {
        padding: 25px;
    }

    .blog-date {
        font-size: 0.8rem;
        color: #94a3b8;
        margin-bottom: 10px;
        display: block;
    }

    .blog-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--text-dark);
        line-height: 1.3;
        margin-bottom: 15px;
    }

    .blog-desc {
        color: #64748b;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 25px;
    }

    /* Author & Actions */
    .card-footer-modern {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 15px;
        border-top: 1px solid #f1f5f9;
    }

    .author-pill {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .author-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        object-fit: cover;
    }

    .author-name {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .action-group {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        text-decoration: none;
        font-size: 0.9rem;
    }

    .btn-view { background: #eef2ff; color: var(--brand-primary); }
    .btn-edit { background: #ecfdf5; color: var(--brand-success); }
    .btn-delete { background: #fef2f2; color: var(--brand-danger); }

    .btn-action:hover {
        transform: scale(1.1);
        filter: brightness(0.95);
    }

</style>

<div class="page-wrapper">
    <div class="container">
        
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-4">Explore Stories</h2>
            <div class="search-container">
                <input type="text" id="searchBlog" class="form-control search-input" 
                       placeholder="Search by title, topic or keyword...">
            </div>
        </div>

        <div class="row" id="blogGrid">
            <% blogs.forEach(blog => { %>
                <div class="col-xl-4 col-lg-6 col-md-6 mb-5 blog-item" data-title="<%= blog.title.toLowerCase() %>">
                    <div class="blog-card shadow-sm">
                        
                        <div class="img-wrapper">
                            <span class="category-tag"><%= blog.category %></span>
                            <img src="<%= blog.blogimage %>" class="blog-img" alt="Blog Image">
                        </div>

                        <div class="card-body">
                            <span class="blog-date">
                                <i class="mdi mdi-calendar-outline mr-1"></i>
                                <%= new Date(blog.publishDate).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                            </span>
                            
                            <h3 class="blog-title">
                                <%= blog.title %>
                            </h3>

                            <p class="blog-desc">
                                <%= blog.description ? blog.description.substring(0, 100) : '' %>...
                            </p>

                            <div class="card-footer-modern">
                                <div class="author-pill">
                                    <img src="<%= blog.authorImage %>" class="author-avatar">
                                    <span class="author-name"><%= blog.authorname %></span>
                                </div>

                                <div class="action-group">
                                    <a href="/blog/single-view/<%= blog.id %>" class="btn-action btn-view" title="View Article">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/blog/edit-blog/<%= blog.id %>" class="btn-action btn-edit" title="Edit Post">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="/blog/delete-blog/<%= blog.id %>" class="btn-action btn-delete" title="Delete Post">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <div id="noResults" class="text-center py-5 d-none">
            <i class="mdi mdi-magnify-close" style="font-size: 4rem; color: #cbd5e1;"></i>
            <h4 class="text-muted mt-3">No blogs found matching your search.</h4>
        </div>

    </div>
</div>

<script>
    const searchInput = document.getElementById('searchBlog');
    const blogItems = document.querySelectorAll('.blog-item');
    const noResults = document.getElementById('noResults');

    searchInput.addEventListener('input', function () {
        const searchValue = this.value.toLowerCase().trim();
        let hasResults = false;

        blogItems.forEach(item => {
            const title = item.getAttribute('data-title');

            if (title.includes(searchValue)) {
                item.style.display = "block";
                hasResults = true;
            } else {
                item.style.display = "none";
            }
        });

        // Show/Hide no results message
        if (hasResults) {
            noResults.classList.add('d-none');
        } else {
            noResults.classList.remove('d-none');
        }
    });
</script>

<%- include('../footer') %>