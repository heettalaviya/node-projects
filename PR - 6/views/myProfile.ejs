<%- include("header") %>

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
        --surface-color: #ffffff;
        --text-header: #0f172a;
        --text-body: #64748b;
    }

    body {
        background-color: #f1f5f9;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .profile-wrapper {
        padding: 60px 0;
    }

    .glass-profile-card {
        background: var(--surface-color);
        border: none;
        border-radius: 24px;
        box-shadow: 0 20px 25px -5px rgba(0,0,0,0.05), 0 8px 10px -6px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    /* Profile Header Styling */
    .profile-cover {
        height: 140px;
        background: var(--primary-gradient);
        position: relative;
    }

    .profile-avatar-container {
        position: relative;
        margin-top: -70px;
        display: inline-block;
    }

    .profile-img-main {
        width: 140px;
        height: 140px;
        border-radius: 40px; /* Modern "Squircle" shape */
        object-fit: cover;
        border: 6px solid #fff;
        box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
        background: #fff;
    }

    .status-indicator {
        position: absolute;
        bottom: 8px;
        right: 8px;
        width: 18px;
        height: 18px;
        background: #10b981;
        border: 3px solid #fff;
        border-radius: 50%;
    }

    /* Info Grid */
    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--text-body);
        font-weight: 700;
        margin-bottom: 4px;
    }

    .info-value {
        font-size: 1rem;
        color: var(--text-header);
        font-weight: 600;
    }

    .info-box {
        background: #f8fafc;
        padding: 20px;
        border-radius: 16px;
        transition: 0.3s;
        height: 100%;
        border: 1px solid #f1f5f9;
    }

    .info-box:hover {
        background: #fff;
        border-color: #6366f1;
        transform: translateY(-3px);
        box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.1);
    }

    .icon-circle {
        width: 40px;
        height: 40px;
        background: rgba(99, 102, 241, 0.1);
        color: #6366f1;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

    /* Buttons */
    .btn-dashboard {
        background: #0f172a;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-dashboard:hover {
        background: #1e293b;
        color: white;
        transform: translateX(-5px);
    }
</style>

<div class="container profile-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            
            <div class="card glass-profile-card">
                <div class="profile-cover"></div>

                <div class="card-body px-5 pb-5">
                    <div class="text-center mb-5">
                        <div class="profile-avatar-container">
                            <img src="<%= admin.adminImage || '/images/default-user.png' %>" class="profile-img-main" alt="Admin">
                            <div class="status-indicator"></div>
                        </div>
                        
                        <h2 class="mt-3 font-weight-bold" style="color: var(--text-header);"><%= admin.name %></h2>
                        <span class="badge" style="background: rgba(99, 102, 241, 0.1); color: #6366f1; padding: 8px 20px; border-radius: 100px; font-weight: 700;">
                            <%= admin.role || "Administrator" %>
                        </span>
                    </div>

                    <h5 class="mb-4" style="font-weight: 700; border-left: 4px solid #6366f1; padding-left: 15px;">Account Information</h5>

                    <div class="row g-4">
                        <div class="col-md-6 mb-4">
                            <div class="info-box">
                                <div class="icon-circle">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="info-label">Full Name</div>
                                <div class="info-value"><%= admin.name %></div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="info-box">
                                <div class="icon-circle" style="color: #06b6d4; background: rgba(6, 182, 212, 0.1);">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="info-label">Email Address</div>
                                <div class="info-value"><%= admin.email %></div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="info-box">
                                <div class="icon-circle" style="color: #8b5cf6; background: rgba(139, 92, 246, 0.1);">
                                    <i class="fas fa-shield-alt"></i>
                                </div>
                                <div class="info-label">Permissions</div>
                                <div class="info-value">Full System Access</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="info-box">
                                <div class="icon-circle" style="color: #f59e0b; background: rgba(245, 158, 11, 0.1);">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="info-label">Current Status</div>
                                <div class="info-value text-success">Active Now</div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 pt-3 border-top d-flex justify-content-between align-items-center">
                        <a href="/dashboard" class="btn btn-dashboard">
                            <i class="fas fa-arrow-left mr-2"></i> Return to Dashboard
                        </a>
                        <p class="mb-0 text-muted small">Session ID: <span class="text-dark">#729<%= admin._id %></span></p>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<%- include("footer") %>