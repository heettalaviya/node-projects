<%- include('../header') %>

<style>
    /* Modern Card Styling */
    .edit-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }
    
    .card-header-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 40px 20px;
        text-align: center;
        color: white;
    }

    /* Profile Image Container - Floating Effect */
    .profile-edit-container {
        position: relative;
        width: 140px;
        height: 140px;
        margin: -70px auto 20px; /* Pulls image up into header */
    }

    .profile-img-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        background-color: #fff;
    }

    /* Floating Camera Icon */
    .edit-icon-overlay {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background: #ffc107;
        color: #fff;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border: 3px solid #fff;
        transition: transform 0.2s;
    }
    
    .edit-icon-overlay:hover {
        transform: scale(1.1);
        background: #e0a800;
    }

    /* Form Inputs */
    .form-control-custom {
        border-radius: 8px;
        border: 1px solid #e9ecef;
        padding: 12px 15px;
        height: auto;
        background-color: #f8f9fa;
    }
    .form-control-custom:focus {
        background-color: #fff;
        border-color: #764ba2;
        box-shadow: 0 0 0 3px rgba(118, 75, 162, 0.1);
    }
    
    /* Label Styling */
    .input-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Hide default file input */
    #adminImageInput {
        display: none;
    }
</style>

<div class="page-wrapper" style="background-color: #eef2f6;">
    
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title text-dark">Update Profile</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent p-0 m-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Admins</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8 col-md-10">
                
                <form action="/admin/update-admin/<%= admin.id%>" method="post" enctype="multipart/form-data">
                    <div class="card edit-card bg-white">
                        
                        <div class="card-header-custom">
                            <h3 class="font-weight-bold mb-0">Edit Details</h3>
                            <p class="mb-0 opacity-75">Update information for <%= admin.name %></p>
                        </div>

                        <div class="card-body px-4 px-md-5 pb-5">
                            
                            <div class="profile-edit-container">
                                <img src="<%= admin.image ? admin.image : 'https://via.placeholder.com/150' %>" 
                                     id="previewImg" 
                                     class="profile-img-preview" 
                                     alt="Profile Picture">
                                
                                <label for="adminImageInput" class="edit-icon-overlay" title="Change Photo">
                                    <i class="mdi mdi-camera"></i>
                                </label>
                                <input type="file" name="image" id="adminImageInput" accept="image/*" onchange="previewFile(this)">
                            </div>

                            <div class="text-center mb-5">
                                <h4 class="card-title mb-1"><%= admin.name %></h4>
                                <span class="badge badge-pill badge-primary px-3 py-1"><%= admin.role %></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="input-label">Full Name</label>
                                    <input type="text" class="form-control form-control-custom" name="name" value="<%= admin.name %>" placeholder="Enter Full Name" required>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="input-label">Email Address</label>
                                    <input type="email" class="form-control form-control-custom" name="email" value="<%= admin.email %>" placeholder="name@example.com" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="input-label">Access Role</label>
                                    <select class="form-control form-control-custom" name="role">
                                        <option value="admin" <%= admin.role === 'admin' ? 'selected' : '' %>>Admin</option>
                                        <option value="editor" <%= admin.role === 'editor' ? 'selected' : '' %>>Editor</option>
                                        <option value="superadmin" <%= admin.role === 'superadmin' ? 'selected' : '' %>>Super Admin</option>
                                    </select>
                                </div>

                                <div class="col-md-6 mb-4" hidden>
                                    <label class="input-label">Password</label>
                                    <input type="password" class="form-control form-control-custom" name="password" value="<%= admin.password %>" placeholder="Enter new password">
                                    <small class="text-muted">Leave blank to keep current password</small>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mt-4">
                                <a href="#" onclick="history.back()" class="btn btn-outline-secondary mr-3 px-4" style="border-radius: 50px;">Cancel</a>
                                <button type="submit" class="btn btn-success px-5 text-white shadow" style="border-radius: 50px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border:none;">
                                    <i class="mdi mdi-content-save mr-1"></i> Save Changes
                                </button>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    // Real-time image preview when selecting a file
    function previewFile(input) {
        var file = input.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function() {
                document.getElementById("previewImg").src = reader.result;
            }
            reader.readAsDataURL(file);
        }
    }
</script>

<%- include('../footer') %>