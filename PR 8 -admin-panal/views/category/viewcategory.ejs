<%- include('../header')%>

<div class="page-wrapper">
    <div class="container-fluid">

        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-md-6">
                <h3 class="fw-bold">All Categories</h3>
                <p class="text-muted mb-0">Manage your categories</p>
            </div>

            <div class="col-md-6 text-end">
                <a href="/category/add-category" 
                   class="btn btn-primary rounded-3 px-4">
                   <i class="fas fa-plus"></i> Add Category
                </a>
            </div>
        </div>

        <!-- Card -->
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body">

                <!-- Search -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <input 
                            type="text"
                            class="form-control rounded-3"
                            placeholder="Search category..."
                            id="searchInput"
                        >
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">

                    <table class="table align-middle table-hover">

                        <thead class="table-light">
                            <tr>
                                <th style="width:70px;">#</th>
                                <th>Category Name</th>
                                <th style="width:140px;">Image</th>
                                <th style="width:160px;">Action</th>
                            </tr>
                        </thead>

                        <tbody id="categoryTable">

                            <% category.forEach((category,i)=>{ %>

                                <tr>

                                    <!-- Serial -->
                                    <td>
                                        <span class="badge bg-dark">
                                            <%= i+1 %>
                                        </span>
                                    </td>

                                    <!-- Name -->
                                    <td class="fw-semibold text-break">
                                        <%= category.categoryName %>
                                    </td>

                                    <!-- Image -->
                                    <td>
                                        <img 
                                            src="<%= category.categoryImage %>"
                                            class="rounded-3 shadow-sm"
                                            style="width:70px; height:70px; object-fit:cover;"
                                        >
                                    </td>

                                    <!-- Actions -->
                                    <td>

                                        <a href="/category/edit-category/<%= category.id %>"
                                           class="btn btn-success btn-sm rounded-3 me-1">
                                           <i class="fas fa-edit"></i>
                                        </a>

                                        <a href="/category/delete-category/<%= category.id %>"
                                           class="btn btn-danger btn-sm rounded-3"
                                           onclick="return confirm('Delete this category?')">
                                           <i class="fas fa-trash"></i>
                                        </a>

                                    </td>

                                </tr>

                            <% }) %>

                        </tbody>

                    </table>

                </div>

            </div>
        </div>

    </div>
</div>

<%- include('../footer')%>

<!-- Search Script -->
<script>
document.getElementById("searchInput").addEventListener("keyup", function() {
    let value = this.value.toLowerCase();
    let rows = document.querySelectorAll("#categoryTable tr");

    rows.forEach(row => {
        row.style.display =
            row.innerText.toLowerCase().includes(value)
            ? ""
            : "none";
    });
});
</script>
