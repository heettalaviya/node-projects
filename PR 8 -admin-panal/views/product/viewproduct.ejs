<%- include('../header') %>

<style>
    .masonry {
        column-count: 4;
        column-gap: 15px;
    }

    @media (max-width: 992px) {
        .masonry { column-count: 3; }
    }

    @media (max-width: 768px) {
        .masonry { column-count: 2; }
    }

    @media (max-width: 576px) {
        .masonry { column-count: 1; }
    }

    .masonry-item {
        break-inside: avoid;
        margin-bottom: 15px;
    }

    .card-modern {
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0px 5px 18px rgba(0,0,0,0.1);
        transition: 0.3s ease;
        position: relative;
    }

    .card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0px 10px 25px rgba(0,0,0,0.15);
    }

    .brand-tag {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #007bff;
        padding: 3px 10px;
        color: #fff;
        font-size: 11px;
        border-radius: 15px;
    }

    .card-modern img {
        width: 100%;
        height: auto;
        display: block;
    }

    .p-body {
        padding: 10px 14px;
    }

    .p-title {
        font-size: 16px;
        font-weight: 600;
        margin: 4px 0;
    }

    .p-desc {
        color: #666;
        font-size: 13px;
        margin: 4px 0 8px 0;
        overflow: hidden;
    }

    .p-price {
        font-size: 17px;
        font-weight: 700;
        color: #0a8d43;
        margin-bottom: 8px;
        margin-top: 0px;
    }

    .btn-sm {
        font-size: 12px;
        padding: 4px 12px;
        border-radius: 8px;
    }
</style>

<style>
    body {
        background: #f1f3f6;
    }

    /* GRID LAYOUT */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .product-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (max-width: 768px) {
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 576px) {
        .product-grid {
            grid-template-columns: repeat(1, 1fr);
        }
    }

    /* CARD */
    .card-modern {
        background: #fff;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: 0.3s ease;
        position: relative;

        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-modern:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 28px rgba(0,0,0,0.15);
    }

    /* BRAND */
    .brand-tag {
        position: absolute;
        top: 10px;
        left: 10px;
        background: #0d6efd;
        padding: 4px 10px;
        color: #fff;
        font-size: 11px;
        border-radius: 20px;
        z-index: 2;
    }

    /* IMAGE */
    .card-modern img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        background: #eee;
    }

    /* BODY */
    .p-body {
        padding: 14px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .p-title {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .p-desc {
        font-size: 13px;
        color: #666;
        margin-bottom: 8px;

        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .p-price {
        font-size: 16px;
        font-weight: 700;
        color: #198754;
        margin-bottom: 10px;
    }

    /* BUTTONS BOTTOM */
    .p-body .d-flex {
        margin-top: auto;
    }

    .card-modern .btn {
        font-size: 12px;
        padding: 5px 12px;
        border-radius: 8px;
        width: 48%;
    }
</style>

<div class="page-wrapper">
    <div class="container-fluid">

        <% if(products.length === 0) { %>
            <div class="col-12 text-center mt-5">
                <h3>No Products Available</h3>
            </div>
        <% } %>

        <div class="product-grid">


            <% products.forEach((products) => { %>

                
                    <div class="card-modern">

                        <span class="brand-tag"><%= products.ProductBrand %></span>

                        <img src="<%= products.productImage %>" alt="<%= products.productName %>">

                        <div class="p-body">

                            <h4 class="p-title"><%= products.productName %></h4>

                            <p class="p-desc"><%= products.productDes %></p>

                            <p class="p-price">â‚¹ <%= products.productPrice %></p>

                            <div class="d-flex justify-content-between mb-2">
                                <a href="/product/edit-product/<%= products.id %>" class="btn btn-outline-primary btn-sm">Edit</a>
                                <a href="/product/delete-product/<%= products.id %>" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>

                        

                    </div>
                </div>

            <% }) %>

        </div>

    </div>
</div>

<%- include('../footer') %>
