            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" action="/change-Password" method="post">
                            <div class="card-body">
                                <h4 class="card-title">Change Password</h4>

                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-right control-label col-form-label"> old
                                        Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" 
                                            placeholder=" old Password Here" name="oldpass">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-right control-label col-form-label"> New
                                        Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" 
                                            placeholder=" new Password Here" name="newpass">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-right control-label col-form-label"> Confirm
                                        Password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control"
                                            placeholder=" confirm Password Here" name="cpassword">
                                    </div>
                                </div>

                            </div>
                            <div class="border-top">
                                <div class="card-body d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>



                </div>

