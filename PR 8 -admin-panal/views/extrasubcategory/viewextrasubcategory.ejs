<%- include('../header')%>

<div class="page-wrapper" style="background: #f4f7f9; min-height: 100vh;">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h4 class="page-title text-dark font-weight-bold">Extra Sub Category Management</h4>
                <p class="text-muted small mb-0">Manage deep-level product classifications</p>
            </div>
            <div class="col-md-6 text-right">
                <a href="/extrasubcategory/add" class="btn btn-info shadow-sm px-4" style="border-radius: 8px;">
                    <i class="mdi mdi-plus-circle mr-1"></i> Create Extra Sub
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm border-0" style="border-radius: 12px;">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover v-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 text-muted py-3 pl-4" style="width: 60px;">#</th>
                                        <th class="border-0 text-muted py-3">Hierarchy Path</th>
                                        <th class="border-0 text-muted py-3">Extra Sub Name</th>
                                        <th class="border-0 text-muted py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% extrasubcategory.forEach((item, i) => { %>
                                    <tr>
                                        <td class="pl-4">
                                            <span class="text-muted small"><%= i + 1 %></span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="mr-3">
                                                    <img src="<%= item.categoryId.categoryImage %>" 
                                                         alt="cat" class="rounded" 
                                                         width="40" height="40" style="object-fit: cover;">
                                                </div>
                                                <div>
                                                    <div class="d-flex align-items-center">
                                                        <span class="font-weight-bold text-dark"><%= item.categoryId.categoryName %></span>
                                                        <i class="mdi mdi-chevron-right mx-2 text-muted"></i>
                                                        <span class="text-secondary"><%= item.subcategoryId.subCategoryName %></span>
                                                    </div>
                                                    <small class="text-muted font-italic">Parent Tree</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-primary px-3 py-2" style="font-size: 13px; border-radius: 6px; background-color: #5e72e4;">
                                                <%= item.extrasubCategoryName %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-btns">
                                                <a href="/extrasubcategory/edit-extrasubcategory/<%= item.id %>" 
                                                   class="btn btn-sm btn-outline-info mr-1" 
                                                   style="border-radius: 5px;">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="/extrasubcategory/delete-extrasubcategory/<%= item.id %>" 
                                                   class="btn btn-sm btn-outline-danger" 
                                                   style="border-radius: 5px;"
                                                   onclick="return confirm('Delete this deep-level category?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Table Styling */
    .table thead th {
        text-transform: uppercase;
        font-size: 11px;
        letter-spacing: 1px;
    }
    
    .table tbody tr {
        transition: all 0.2s ease;
    }
    
    .table tbody tr:hover {
        background-color: #f8faff !important;
    }

    /* Icon Colors */
    .mdi-chevron-right {
        font-size: 18px;
    }

    /* Action Button Hover */
    .btn-outline-info:hover { color: #fff; background-color: #11cdef; border-color: #11cdef; }
    .btn-outline-danger:hover { color: #fff; background-color: #f5365c; border-color: #f5365c; }
    
    .v-middle td {
        vertical-align: middle !important;
    }
</style>

<%- include('../footer')%>