<%- include('../header')%>

<div class="page-wrapper" style="background: #f4f7f9; min-height: 100vh;">
    <div class="page-breadcrumb bg-white shadow-sm mb-4" style="padding: 20px 35px;">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h4 class="page-title mb-1 fw-bold text-dark">Add Extra Sub Category</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent p-0 m-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Inventory Hierarchy</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                    <div class="card-header bg-white border-0 pt-4 px-4 text-center">
                        <div class="icon-circle mb-2 mx-auto" style="width: 60px; height: 60px; background: #eef2ff; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-plus-network text-primary" style="font-size: 28px;"></i>
                        </div>
                        <h5 class="fw-bold text-dark">Define Level 3 Category</h5>
                        <p class="text-muted small">Select parents to create a specific product grouping</p>
                    </div>

                    <form action="/extrasubcategory/add-extrasubcategory" method="post">
                        <div class="card-body px-4 pb-4">
                            
                            <div class="form-group mb-4">
                                <label class="small fw-bold text-uppercase text-muted mb-2 d-block">1. Main Category</label>
                                <div class="select-wrapper">
                                    <select name="categoryId" id="categoryId" class="form-control custom-select-ui" required>
                                        <option value="" disabled selected>-- Choose Main Category --</option>
                                        <% category.forEach((cat)=>{ %>
                                            <option value="<%= cat.id %>"><%= cat.categoryName %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="small fw-bold text-uppercase text-muted mb-2 d-block">2. Sub Category</label>
                                <div class="select-wrapper">
                                    <select name="subcategoryId" id="subcategoryId" class="form-control custom-select-ui" required>
                                        <option value="" disabled selected>-- First select a category --</option>
                                    </select>
                                </div>
                            </div>

                            <hr class="my-4 opacity-5">

                            <div class="form-group mb-4">
                                <label class="small fw-bold text-uppercase text-primary mb-2 d-block">3. Extra Sub Category Name</label>
                                <input type="text" class="form-control modern-input" 
                                       id="extrasubCategoryName" name="extrasubCategoryName" 
                                       placeholder="e.g. Slim Fit, Wireless, Organic..." required>
                            </div>

                        </div>

                        <div class="card-footer bg-light p-4 text-center border-0" style="border-radius: 0 0 15px 15px;">
                            <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm" style="border-radius: 10px; font-weight: 600;">
                                <i class="mdi mdi-check-circle mr-2"></i> Confirm & Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Modern Form Controls */
    .custom-select-ui, .modern-input {
        height: 50px !important;
        border: 2px solid #edf2f7 !important;
        border-radius: 10px !important;
        padding: 0 15px !important;
        transition: all 0.3s ease;
        background-color: #fcfcfc;
    }

    .custom-select-ui:focus, .modern-input:focus {
        border-color: #4e73df !important;
        background-color: #fff;
        box-shadow: 0 4px 12px rgba(78, 115, 223, 0.1);
    }

    /* Selection Highlighting */
    #subcategoryId:disabled {
        background-color: #f1f3f5;
        cursor: not-allowed;
    }

    .select-wrapper {
        position: relative;
    }

    /* Animation for the card */
    .card {
        animation: slideUp 0.5s ease-out;
    }

    @keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    const categorySelect = document.getElementById('categoryId');
    const subcategorySelect = document.getElementById('subcategoryId');

    categorySelect.addEventListener('change', async () => {
        const id = categorySelect.value;
        
        // Reset subcategory dropdown
        subcategorySelect.innerHTML = `<option value="" disabled selected>Loading Subcategories...</option>`;
        
        try {
            const response = await fetch(`/extrasubcategory/subcategory/${id}`);
            const data = await response.json();
            const subCategories = data.data;

            // Clear and rebuild
            subcategorySelect.innerHTML = `<option value="" disabled selected>-- Choose Sub Category --</option>`;
            
            if (subCategories.length === 0) {
                subcategorySelect.innerHTML = `<option value="" disabled>No Subcategories found</option>`;
            } else {
                subCategories.forEach(item => {
                    const option = document.createElement('option');
                    option.value = item._id;
                    option.textContent = item.subCategoryName;
                    subcategorySelect.appendChild(option);
                });
            }
        } catch (error) {
            console.error('Fetch Error:', error);
            subcategorySelect.innerHTML = `<option value="" disabled>Error loading data</option>`;
        }
    });
</script>

<%- include('../footer')%>