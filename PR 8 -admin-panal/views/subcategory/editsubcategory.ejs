<%- include('../header')%>

<div class="page-wrapper" style="background-color: #f4f7f6; min-height: 100vh;">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title text-dark">Edit Sub Category</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb" style="background: transparent;">
                            <li class="breadcrumb-item"><a href="#" style="color: #6c757d;">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="m-0 font-weight-bold text-primary">Sub Category Details</h5>
                        <p class="text-muted small m-0">Update the information for this subcategory below.</p>
                    </div>

                    <form class="form-material" action="/subcategory/update-subcategory/<%= subcategory.id %>" method="post">
                        <div class="card-body px-4 py-4">
                            
                            <div class="form-group mb-4">
                                <label class="text-dark font-weight-600 mb-2">Parent Category</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-light border-right-0"><i class="mdi mdi-layers"></i></span>
                                    </div>
                                    <select name="categoryId" class="form-control custom-select border-left-0" style="height: 45px;">
                                        <option value="">Select a category</option>
                                        <% category.forEach((category)=>{ %>
                                            <option value="<%= category.id %>" <%= category.id == subcategory.categoryId ? 'selected' : '' %>>
                                                <%= category.categoryName %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="text-dark font-weight-600 mb-2">Sub Category Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-light border-right-0"><i class="mdi mdi-tag-outline"></i></span>
                                    </div>
                                    <input type="text" class="form-control border-left-0" id="categoryName" 
                                           placeholder="e.g. Smartphones" name="subCategoryName" 
                                           value="<%= subcategory.subCategoryName %>" style="height: 45px;">
                                </div>
                            </div>

                        </div>

                        <div class="card-footer bg-light d-flex justify-content-between align-items-center px-4 py-3">
                            <a href="javascript:history.back()" class="btn btn-link text-muted">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm" style="border-radius: 8px; font-weight: 600;">
                                Update Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer')%>

<style>
    .font-weight-600 { font-weight: 600; }
    .form-control:focus {
        border-color: #7460ee;
        box-shadow: none;
    }
    .card-header { background-color: #fff; }
    .input-group-text {
        color: #adb5bd;
        border: 1px solid #ced4da;
    }
</style>