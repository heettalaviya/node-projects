<%- include('../header')%>

<div class="page-wrapper" style="background: #eef2f7; min-height: 100vh;">
    <div class="container-fluid pt-4 px-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white shadow-sm border-0 py-2 px-3" style="border-radius: 50px; width: fit-content;">
                <li class="breadcrumb-item"><a href="/" class="text-muted small">Admin</a></li>
                <li class="breadcrumb-item active small text-primary font-weight-bold" aria-current="page">New Sub-Category</li>
            </ol>
        </nav>
    </div>

    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow-sm p-4 text-center" style="border-radius: 20px; background: #fff;">
                            <div class="icon-circle mb-3 mx-auto">
                                <i class="mdi mdi-flask-outline font-24 text-primary"></i>
                            </div>
                            <h5 class="font-weight-bold">Creation Lab</h5>
                            <p class="text-muted small">You are creating a secondary level of classification. This helps customers find products faster.</p>
                            <hr class="w-25 mx-auto">
                            <div class="d-flex justify-content-around mt-3">
                                <div class="text-center">
                                    <h6 class="mb-0 font-weight-bold text-primary">1k+</h6>
                                    <small class="text-muted">Users</small>
                                </div>
                                <div class="text-center">
                                    <h6 class="mb-0 font-weight-bold text-success">Active</h6>
                                    <small class="text-muted">Status</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="card border-0 shadow-lg" style="border-radius: 20px;">
                            <div class="card-body p-5">
                                <form action="/subcategory/add-subcategory" method="post">
                                    <div class="form-group mb-5">
                                        <label class="premium-label">Mapping</label>
                                        <div class="custom-dropdown-container">
                                            <select name="categoryId" class="form-control premium-select" required>
                                                <option value="" disabled selected>Select Parent Category</option>
                                                <% category.forEach((category)=>{ %>
                                                    <option value="<%= category.id %>"><%= category.categoryName %></option>
                                                <% }) %>
                                            </select>
                                            <i class="mdi mdi-rhombus-split dropdown-icon"></i>
                                        </div>
                                    </div>

                                    <div class="form-group mb-5">
                                        <label class="premium-label">Identifier</label>
                                        <input type="text" class="form-control premium-input" 
                                               placeholder="Enter sub-category name..." 
                                               name="subCategoryName" required>
                                        <div class="input-shadow-line"></div>
                                    </div>

                                    <div class="row pt-3 align-items-center">
                                        <div class="col-6">
                                            <a href="javascript:history.back()" class="text-danger font-weight-bold small text-uppercase" style="letter-spacing: 1px;">
                                                <i class="mdi mdi-close-circle mr-1"></i> Discard
                                            </a>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button type="submit" class="btn btn-primary btn-raised px-5">
                                                Finalize <i class="mdi mdi-arrow-right ml-2"></i>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Premium Typography */
    .premium-label {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #7460ee;
        font-weight: 800;
        margin-bottom: 15px;
        display: block;
    }

    /* Icon Circle */
    .icon-circle {
        width: 60px;
        height: 60px;
        background: rgba(116, 96, 238, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Premium Input Styling */
    .premium-input, .premium-select {
        border: none !important;
        border-radius: 0 !important;
        border-bottom: 1.5px solid #d1d9e6 !important;
        padding-left: 0 !important;
        font-size: 1.2rem !important;
        height: 50px !important;
        background: transparent !important;
        transition: all 0.4s ease;
    }

    .premium-input:focus, .premium-select:focus {
        box-shadow: none !important;
        border-color: #7460ee !important;
    }

    .input-shadow-line {
        height: 2px;
        width: 0;
        background: #7460ee;
        transition: 0.5s ease;
        margin-top: -1.5px;
    }

    .premium-input:focus + .input-shadow-line {
        width: 100%;
    }

    /* Dropdown Icon Styling */
    .custom-dropdown-container {
        position: relative;
    }

    .dropdown-icon {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        color: #7460ee;
        pointer-events: none;
    }

    /* Button Raised Effect */
    .btn-raised {
        background: #7460ee;
        border: none;
        border-radius: 50px;
        padding: 12px 35px;
        font-weight: 700;
        box-shadow: 0 10px 25px rgba(116, 96, 238, 0.4);
        transition: all 0.3s ease;
    }

    .btn-raised:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(116, 96, 238, 0.5);
        background: #5f48e8;
    }

    /* Remove default appearance */
    .premium-select {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }
</style>

<%- include('../footer')%>