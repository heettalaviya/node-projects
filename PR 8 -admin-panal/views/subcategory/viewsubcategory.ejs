<%- include('../header')%>

<div class="page-wrapper" style="background: #f8f9fa; min-height: 100vh;">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h4 class="page-title text-dark">Sub Category Management</h4>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb" style="background: transparent; padding-left: 0;">
                        <li class="breadcrumb-item"><a href="#" class="text-muted">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View All</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-6 text-right">
                <a href="/subcategory/add" class="btn btn-primary shadow-sm px-4" style="border-radius: 20px;">
                    <i class="mdi mdi-plus mr-1"></i> Add New
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                    <div class="card-body">
                        <div class="d-md-flex align-items-center mb-4">
                            <div>
                                <h5 class="card-title font-weight-bold mb-1">Detailed List</h5>
                                <p class="text-muted small">Managing <%= subcategory.length %> subcategories in your database</p>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table v-middle mb-0">
                                <thead>
                                    <tr class="bg-light">
                                        <th class="border-top-0 text-muted font-weight-bold" style="width: 80px;">#</th>
                                        <th class="border-top-0 text-muted font-weight-bold">Parent Category</th>
                                        <th class="border-top-0 text-muted font-weight-bold">Sub Category</th>
                                        <th class="border-top-0 text-muted font-weight-bold text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% subcategory.forEach((subcategory, i) => { %>
                                    <tr>
                                        <td>
                                            <span class="text-muted font-weight-medium"><%= i + 1 %></span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="m-r-10">
                                                    <img src="<%= subcategory.categoryId.categoryImage %>" 
                                                         alt="cat" class="rounded-circle shadow-sm" 
                                                         width="45" height="45" style="object-fit: cover; border: 2px solid #fff;">
                                                </div>
                                                <div class="">
                                                    <h6 class="m-b-0 font-weight-bold text-dark">
                                                        <%= subcategory.categoryId.categoryName %>
                                                    </h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge badge-pill badge-light-primary text-primary px-3 py-2" style="font-size: 0.85rem;">
                                                <%= subcategory.subCategoryName %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <a href="/subcategory/edit-subcategory/<%= subcategory.id %>" 
                                                   class="btn btn-outline-success btn-sm mx-1" 
                                                   data-toggle="tooltip" title="Edit">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a href="/subcategory/delete-subcategory/<%= subcategory.id %>" 
                                                   class="btn btn-outline-danger btn-sm mx-1" 
                                                   onclick="return confirm('Are you sure you want to delete this?')"
                                                   data-toggle="tooltip" title="Delete">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Styling the badges to be softer */
    .badge-light-primary {
        background-color: rgba(116, 96, 238, 0.15);
        border: 1px solid rgba(116, 96, 238, 0.2);
    }
    
    /* Table hover effect */
    .table tbody tr:hover {
        background-color: #fcfcff;
        transition: 0.3s ease;
    }

    /* Action button refinement */
    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }
    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
    }
    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }
    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }

    /* Alignment */
    .v-middle td {
        vertical-align: middle !important;
    }
</style>

<%- include('../footer')%>